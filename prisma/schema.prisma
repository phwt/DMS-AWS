datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Document {
  id    Int    @id @default(autoincrement())
  name  String
  type  String
  state String @default("IN_PROGRESS")
  Work  Work?
}

