model Work {
  id            Int       @id @default(autoincrement())
  type          String    @default("CREATE")
  state         String    @default("NEW")
  detail        String
  create_date   DateTime  @default(now())
  complete_date DateTime?
  documentId    Int?
  document      Document? @relation(fields: [documentId], references: [id])
}

